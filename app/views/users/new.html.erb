<% provide(:title, "login") %>
<h1>アカウント作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

    <%= f.label :名前, class: "label-signup" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :メールアドレス, class: "label-signup" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :所属, class: "label-signup" %>
  　　　<%= f.text_field :department, class: "form-control" %>

      <%= f.label :パスワード, class: "label-signup" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :パスワード確認, class: "label-signup" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-login" %>
    <% end %>
   
  </div>
</div>

