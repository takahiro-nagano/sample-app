

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">

      <h1 class="modal-title">基本情報の更新</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @user, url: update_basic_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>

            <%= f.label :work_time, class:  "label-signup" %>
            <%= f.time_field :work_time, class: "form-control" %>
            
            <%= f.label :basic_time, class: "label-signup" %>
            <%= f.time_field :basic_time, class: "form-control" %>


            <div class="center">
              <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
              <button type="button" class="btn btn-default btn-block btn-signup" > 
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>